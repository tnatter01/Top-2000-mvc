<table id="lijst" class="table" data-sortable>
    <thead>
        <tr>
            <th>Positie</th>
            <th>Titel</th>
            <th>Artiest</th>
            <th>Jaar</th>
        </tr>
        @foreach (DataRow row in Model.Rows)
        {
        <tr>
            <td>
                <p class="Plaats">@row["positie"]</p>
            </td>
            <td>
                <p class="Titel">@row["titel"]</p>
            </td>
            <td>
                <p class="Artiest">@row["naam"]</p>
            </td>
            <td>
                <p class="Jaar">@row["jaar"]</p>
            </td>
        </tr>
        }
</table>
