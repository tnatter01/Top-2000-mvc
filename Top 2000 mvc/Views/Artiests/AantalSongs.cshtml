@using System.Data;

@{
    ViewBag.Title = "AantalSongs";
}

<h2>AantalSongs</h2>
@foreach (DataRow row in Model.Rows)
{
    <p>@row["naam"] heeft in het jaar @row["jaar"] <b>@row["result"]</b> notering(en) in de Top 2000.</p>

    <dl class="dl-horizontal">
        <dt>
            Naam
        </dt>
        <dd>
            @row["naam"]
        </dd>
        <dt>
            Jaar
        </dt>
        <dd>
            @row["jaar"]
        </dd>
        <dt>
            Aantal noteringen
        </dt>
        <dd>
            @row["result"]
        </dd>

    </dl>
}

<div>
    @Html.ActionLink("Terug naar lijst", "Index")
</div>
